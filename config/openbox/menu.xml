<?xml version="1.0" encoding="utf-8"?>
<openbox_menu xmlns="http://openbox.org/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://openbox.org/                 file:///usr/share/openbox/menu.xsd">
	<menu id="root-menu" label="openbox">
		<item label="term">
			<action name="Execute">
				<execute>drawterm</execute>
			</action>
		</item>
		<item label="files">
			<action name="Execute">
				<execute>pcmanfm</execute>
			</action>
		</item>
		<item label="www">
			<action name="Execute">
				<execute>chromium</execute>
			</action>
		</item>
		<separator/>
		<menu id="power" label="power">
			<item label="reboot">
				<action name="Execute">
					<execute>gksudo reboot</execute>
				</action>
			</item>
			<item label="sleep">
				<action name="Execute">
					<execute>gksudo zzz</execute>
				</action>
			</item>			
		</menu>
		<separator/>
		<menu id="openbox" label="openbox">
			<item label="exit">
				<action name="Exit"/>
			</item>
			<item label="restart">
				<action name="Restart"/>
			</item>
		</menu>
	</menu>
</openbox_menu>
