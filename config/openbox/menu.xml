<?xml version="1.0" encoding="utf-8"?>
<openbox_menu xmlns="http://openbox.org/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://openbox.org/                 file:///usr/share/openbox/menu.xsd">
	<menu id="root-menu" label="Openbox">
		<item label="new">
			<action name="Execute">
				<execute>drawterm</execute>
			</action>
		</item>
		<item label="delete">
			<action name="Execute">
				<execute>sh -c "kill $(xprop _NET_WM_PID | awk '/PID/ {print $3}')"</execute>
			</action>
		</item>
		<item label="hide">
			<action name="Execute">
				<execute>sh -c "xdotool windowminimize $(xdotool selectwindow)"</execute>
			</action>
		</item>
	</menu>
</openbox_menu>
