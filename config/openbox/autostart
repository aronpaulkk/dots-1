# set the background
/home/eti/.fehbg &

# set the keymap
setxkbmap us &

# start urxvtd
urxvtd &

# start mpd
mpd &

# start clipmenu
clipmenud &

# disable beeping
xset -b &

# set the gamma
xgamma -gamma 0.8 &

# set the fonts
/usr/scripts/fonts.sh &

# enable touchpad clicks
/usr/scripts/touchpad.sh &

# start compton
compton -Ccf &

# start the bar
sleep 2s && /usr/scripts/toggle-bar.sh &

# start the mpd scrobbler
sleep 1m && mpdas &

# battery icon
cbatticon -l "10" -i "symbolic" &