# compton
compton -Ccf &

# set the gamma
xgamma -gamma 0.8 &

# fonts
/usr/scripts/fonts.sh &

# beep off
xset -b &

# screensaver off
xset -dpms &
xset s off &

# urxvt daemon
urxvtd &

# set the background
./.fehbg &

# bar
sleep 1s && /usr/scripts/toggle-bar.sh d &

# start mpd
mpd &

# clipmenu
clipmenud &

# mpd scrobbler
sleep 1m && mpdas -c /home/eti/.mpdasrc &

# weather for the bar
/usr/scripts/fweather.sh &

# reload resources
xrdb /home/eti/.Xdefaults &